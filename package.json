{
    "name": "template-typescript",
    "version": "1.0.0",
    "description": "Application template typescript",
    "author": "Eduardo Czpla Senkiw",
    "main": "src/main.ts",
    "scripts": {
        "prepare": "husky install",
        "start": "tsx src/main.ts --tsconfig tsconfig.json",
        "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
        "start:dev": "tsx watch src/main.ts --tsconfig tsconfig.json",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint:fix": "eslint \"src/**/*\" --fix",
        "lint:check": "eslint \"src/**/*\""
    },
    "keywords": [],
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^18.16.2",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "eslint": "^8.39.0",
        "eslint-config-standard-with-typescript": "^34.0.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.3",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.6",
        "tsx": "^3.12.6",
        "typescript": "^5.0.4",
        "vitest": "^0.30.1"
    }
}
